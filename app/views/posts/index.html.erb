<h1>Welcome to my first Micro_Blog</h1>
<ul>
  <% @posts.each do |post| %>
  <li>
    <% if post.ispublished? %>
    <div class="blog">  
      <%= link_to post.title, post %>
      <br> 
      <span> Body :  </span>
      <%= post.body%> <br>
      <%= post.ispublished %>
    <br>
    <% else %>
    <h1> Else Part </h1>
    <% end %>
  </li>
  <br>
  <% end %>
</ul>
<button>
<%= link_to "New Post", new_post_path %>
</button>
