<h1>Welcome to my first Micro_Blog</h1>

  <% if !user_signed_in? %>
  <%= link_to "Sign In", new_user_session_path %>
<ul>
  <% @posts.each do |post| %>
  <% if post.ispublished? %>
  <li>
    <div class="blog">  
      <%= post.title %>
      <br> 
      <span> Body :  </span>
      <%= post.body%> <br>
    <br>
    <% end %>
  </li>
  <br>
  <% end %>
</ul>
<% end %>
<% if user_signed_in? %>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<ul>
  <% @posts.each do |post| %>
  <li>
    <div class="blog">  
      <%= link_to post.title, post %>
      <br> 
      <span> Body :  </span>
      <%= post.body%> <br>
      <span>Publish Status :  </span>
      <%= post.ispublished %>
    <br>
  </li>
  <br>
  <% end %>
</ul>
<button>
<%= link_to "New Post", new_post_path %>
</button>
<% end %>
